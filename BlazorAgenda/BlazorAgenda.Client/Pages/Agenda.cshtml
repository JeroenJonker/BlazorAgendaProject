@using BlazorAgenda.Client.Viewmodels
@using BlazorAgenda.Shared.Models
@page "/"
@inherits AgendaViewmodel


@if (StateService.LoginUser == default(User) || StateService.LoginUser == null)
{
    <LoginView OnLogin=OnLoginCompleted />
}
else
{
    <NavigationBarView />
    <div id="main">
        @if (StateService.CurrentPage == BlazorAgenda.Services.Pages.Agenda)
        {
            <CalendarView />
        }
        else if (StateService.CurrentPage == BlazorAgenda.Services.Pages.Users)
        {
            <UsersView/>
        }
    </div>
}
<UserView/>
