@using BlazorAgenda.Shared.Models
@using BlazorAgenda.Client.Viewmodels
@inherits CalendarEventViewModel

<div class="event" draggable="true" ondragstart="@(e => DragStart?.Invoke(e, Event as Event))" ondragenter="$(this).css('z-index', 'unset');"
     ondragleave="$(this).css('z-index', 'auto');" ondragend="$('.event').css('z-index', '');" onclick=@ChangeShowModalEvent
     style="background-color:@(Event.Color); height: @(Rowspan * 16)px; width: @((float)100 / NumEvents)%">
    @Event.Summary
    <br />
    <span class="oi oi-clock"></span> @Event.Start.ToString("HH:mm") - @Event.End.ToString("HH:mm")
    @if(Event.Location != null)
    {
        <br />
        @Event.Location
    }
</div>