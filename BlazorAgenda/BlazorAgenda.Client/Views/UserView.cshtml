@using BlazorAgenda.Services.Interfaces
@using BlazorAgenda.Client.Viewmodels
@inherits UserViewModel

<DefaultObjectBaseView ServiceInterface=IUserService BeforeSave=@ConvertPassword IsVisible=@IsVisible GetClosedValue=@OnClose>
    <div class="form-row">
        <span class="col-sm-5">
            <label class="col-form-label">Email</label>
        </span>
        <span class="col-sm-7">
            <input class="form-control" type="text" bind=Service.CurrentUser.Emailadress />
        </span>
    </div>
    <div class="form-row">
        <span class="col-sm-5">
            <label class="col-form-label">Firstname</label>
        </span>
        <span class="col-sm-7">
            <input class="form-control" type="text" bind=Service.CurrentUser.Firstname />
        </span>
    </div>
    <div class="form-row">   
        <span class="col-sm-5">
            <label class="col-form-label">Lastname</label>
        </span>
        <span class="col-sm-7">
            <input class="form-control" type="text" bind=Service.CurrentUser.Lastname />
        </span>
    </div>
    <div class="form-row">
        <span class="col-sm-5">
            <label class="col-form-label">Password</label>
        </span>
        <span class="col-sm-7">
            <input class="form-control" type="password" bind=Service.CurrentUser.Password />
        </span>
    </div>
</DefaultObjectBaseView>