@using BlazorAgenda.Client.Viewmodels
@inherits UserViewModel

<ModalTemplateView Title=@Title OnClose=@Close IsVisible=@IsVisible>
    <ModalContent>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Email</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="text" bind=CurrentObject.Emailadress />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Firstname</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="text" bind=CurrentObject.Firstname />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Lastname</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="text" bind=CurrentObject.Lastname />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Password</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="password" bind=CurrentObject.Password />
            </span>
        </div>
    </ModalContent>
    <FooterContent>
        <ObjectBaseFooterView ObjectState=CurrentService.GetObjectState(CurrentObject) OnSave=@Save/>
    </FooterContent>
</ModalTemplateView>