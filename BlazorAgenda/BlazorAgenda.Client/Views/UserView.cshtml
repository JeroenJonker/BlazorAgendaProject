@using BlazorAgenda.Client.Services
@using BlazorAgenda.Services.Interfaces
@inject UserViewService service
@inject IStateService StateService

<ModalTemplateView Title=@service.Title OnClose=@service.Close IsVisible=@service.IsVisible>
    <ModalContent>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Email</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="text" bind=service.CurrentObject.Emailadress />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Firstname</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="text" bind=service.CurrentObject.Firstname />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Lastname</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="text" bind=service.CurrentObject.Lastname />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-5">
                <label class="col-form-label">Password</label>
            </span>
            <span class="col-sm-7">
                <input class="form-control" type="password" bind=service.CurrentObject.Password />
            </span>
        </div>
    </ModalContent>
    <FooterContent>
        @if (StateService.LoginUser.Id != service.CurrentObject.Id)
        {
            <ObjectBaseFooterView ObjectState=service.CurrentService.GetObjectState(service.CurrentObject) OnSave=@service.Save OnDelete=@service.Delete/>
        }
        else
        {
            <ObjectBaseFooterView ObjectState=service.CurrentService.GetObjectState(service.CurrentObject) OnSave=@service.Save />
        }
    </FooterContent>
</ModalTemplateView>

@functions
{
protected override void OnInit()
{
    service.OnChange += StateHasChanged;
}
}