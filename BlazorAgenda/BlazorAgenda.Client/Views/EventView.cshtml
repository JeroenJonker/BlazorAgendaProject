@using BlazorAgenda.Client.Services
@inject EventViewService service

<ModalTemplateView Title=@service.Title OnClose=@service.Close IsVisible=@service.IsVisible>
    <ModalContent>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">Description</label>
            </span>
            <span class="col-sm-8">
                <input class="form-control" type="text" bind=service.CurrentObject.Summary maxlength="30" />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">Begin</label>
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="date" bind=service.Start format-value="yyyy-MM-dd" required="required" />
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="time" bind=service.Start format-value="HH:mm" required="required" />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">End</label>
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="date" bind=service.End format-value="yyyy-MM-dd" required="required" />
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="time" bind=service.End format-value="HH:mm" required="required" />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">Location</label>
            </span>
            <span class="col-sm-8">
                <input class="form-control" type="text" bind=service.CurrentObject.Location maxlength="30" />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">Private</label>
            </span>
            <span class="col-sm-4">
                <input type="checkbox" bind="service.CurrentObject.Isprivate" />
            </span>
        </div>
    </ModalContent>
    <FooterContent>
        <ObjectBaseFooterView ObjectState=service.CurrentService.GetObjectState(service.CurrentObject) OnSave=@service.Save OnDelete=@service.Delete />
    </FooterContent>
</ModalTemplateView>

@functions
{
    protected override void OnInit()
    {
        service.OnChange += StateHasChanged;
    }
}