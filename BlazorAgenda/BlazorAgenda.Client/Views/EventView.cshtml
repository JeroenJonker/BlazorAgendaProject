@using BlazorAgenda.Client.Viewmodels
@inherits EventViewmodel

<ModalTemplateView Title=@Title OnClose=@Close IsVisible=@IsVisible>
    <ModalContent>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">Description</label>
            </span>
            <span class="col-sm-8">
                <input class="form-control" type="text" bind=CurrentObject.Summary />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">Begin</label>
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="date" bind=Start format-value="yyyy-MM-dd" required="required" />
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="time" bind=Start format-value="HH:mm" required="required" />
            </span>
        </div>
        <div class="form-row">
            <span class="col-sm-4">
                <label class="col-form-label">End</label>
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="date" bind=End format-value="yyyy-MM-dd" required="required" />
            </span>
            <span class="col-sm-4">
                <input class="form-control" type="time" bind=End format-value="HH:mm" required="required" />
            </span>
        </div>
    </ModalContent>
    <FooterContent>
        <ObjectBaseFooterView ObjectState=CurrentService.GetObjectState(CurrentObject) OnSave=@Save OnDelete=@Delete/>
    </FooterContent>
</ModalTemplateView>