@using BlazorAgenda.Client.Viewmodels
@using BlazorAgenda.Services.Interfaces
@inherits EventViewmodel

<DefaultObjectBaseView ServiceInterface=IEventService IsVisible=@IsVisible GetClosedValue=@OnClose>
    <div class="form-row">
        <span class="col-sm-4">
            <label class="col-form-label">Omschrijving</label>
        </span>
        <span class="col-sm-8">
            <input class="form-control" type="text" bind=EventService.CurrentEvent.Summary />
        </span>
    </div>
    <div class="form-row">
        <span class="col-sm-4">
            <label class="col-form-label">Van</label>
        </span>
        <span class="col-sm-4">
            <input class="form-control" type="date" bind=Start format-value="yyyy-MM-dd" />
        </span>
        <span class="col-sm-4">
            <input class="form-control" type="time" bind=Start format-value="HH:mm" />
        </span>
    </div>
    <div class="form-row">
        <span class="col-sm-4">
            <label class="col-form-label">Tot</label>
        </span>
        <span class="col-sm-4">
            <input class="form-control" type="date" bind=End format-value="yyyy-MM-dd" />
        </span>
        <span class="col-sm-4">
            <input class="form-control" type="time" bind=End format-value="HH:mm" />
        </span>
    </div>
</DefaultObjectBaseView>